{
    "name": "docsafterdark",
    "version": "0.0.0",
    "description": "Beyond dark mode for Google Docs",
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "archiver": "^7.0.1",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "prettier": "^3.7.4",
        "sass": "^1.97.2",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.52.0",
        "web-ext": "^9.2.0",
        "webpack": "^5.104.1",
        "webpack-cli": "^6.0.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/waymondrang/docsafterdark.git"
    },
    "author": "Raymond Wang",
    "bugs": {
        "url": "https://github.com/waymondrang/docsafterdark/issues"
    },
    "homepage": "https://docsafterdark.com/",
    "scripts": {
        "build": "webpack && sass src/scss/index.scss test/index.bundle.css",
        "check": "prettier --check . && eslint src && web-ext lint",
        "dev": "concurrently --names 'webpack,web-ext,sass' --prefix-colors 'green,magenta,red' 'webpack --watch' 'web-ext run --source-dir ./test/ --keep-profile-changes' 'sass --watch src/scss/index.scss test/index.bundle.css'",
        "format": "prettier --write ."
    }
}
